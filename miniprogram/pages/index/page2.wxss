.page-2 {
  padding: 0 60rpx;
}

.page-2 .main {
  margin: 140rpx 0 16rpx;
  width: 100%;
  height: 100%;
  flex: 1;
}

.page-2 .container--outside {
  border: 4rpx solid var(--main-gold-color);
  border-radius: 8rpx;
  padding: 8rpx;
}

.page-2 .container--inside {
  padding: 136rpx 40rpx 20rpx;
  border: 6rpx solid var(--main-gold-color);
  border-radius: 8rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  position: relative;
}

.page-2 .logo-container {
  position: absolute;
  top: -120rpx;
  background-color: #ffffff;
}

.page-2 .logo {
  width: 208rpx;
  height: 208rpx;
}

.page-2 .invite-you {
  font-size: 36rpx;
}

.page-2 .protagonist {
  margin: 48rpx auto;
  display: flex;
  justify-content: center;
}

.page-2 .bridegroom,
.page-2 .bride {
  display: flex;
  align-items: flex-end;
  flex-shrink: 0;
  white-space: nowrap;
}

.page-2 .protagonist-name {
  font-size: 44rpx;
  color: var(--main-blue-color);
}

.page-2 .protagonist-role {
  font-size: 28rpx;
  padding-left: 4rpx;
  padding-bottom: 2rpx;
}

.page-2 .protagonist-split {
  margin: 0 20rpx;
  display: flex;
  align-items: center;
}

.page-2 .protagonist-split image {
  width: 24rpx;
  height: 20rpx;
}

.page-2 .wedding {
  color: var(--main-gold-color);
  text-align: center;
  margin-top: 32rpx;
}

.page-2 .wedding--en {
  font-size: 32rpx;
  line-height: 38rpx;
  padding: 6rpx 0;
}

.page-2 .wedding--split {
  width: 100%;
  height: 2rpx;
  background-color: var(--main-gold-color);
}

.page-2 .wedding--cn {
  font-size: 36rpx;
  line-height: 40rpx;
  padding: 8rpx 0;
}

.page-2 .bottom {
  position: absolute;
  bottom: 0;
  left: 47%;
}
