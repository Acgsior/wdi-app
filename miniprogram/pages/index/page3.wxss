.page.page-3 {
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-3 .container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.page-3 .photo-text--cn,
.page-3 .photo-text--en {
  z-index: 11;
  color: var(--main-gold-color);
}

.page-3 .photo-text--cn {
  font-size: 42rpx;
  line-height: 48rpx;
}

.page-3 .photo-text--en {
  font-size: 28rpx;
  line-height: 34rpx;
}

.page-3 .photo-content {
  display: flex;
  flex-direction: column;
  position: relative;
}

.page-3 .photo-content image,
.page-3 .photo-shadow {
  height: 800rpx;
  width: 450rpx;
}

.page-3 .photo-shadow {
  border: 8rpx solid var(--main-gold-color);
}

.page-3 .photo--1 {
  margin-top: 16rpx;
  z-index: 10;
}

.page-3 .photo-shadow--1 {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
}

.page-3 .photo--2 {
  margin: 40rpx 0 16rpx 40rpx;
  z-index: 10;
}

.page-3 .photo-shadow--2 {
  position: absolute;
  top: 0;
  left: 0;
  background-color: var(--main-gold-color);
}