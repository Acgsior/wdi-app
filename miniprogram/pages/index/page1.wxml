<view class="page page-1">
  <view class="top">
    <view class="top-content top-content-1 futura {{getAniStateClass(1, 'top1')}}">
      WEDDING
    </view>
    <view class="top-content top-content-2 futura">
      INVITATION
    </view>
  </view>
  <view class="main">
    <view class="main-bg--rect">
      <view class="main-bg--rect-inside" />
    </view>
    <view class="main-bg-img {{getAniStateClass(1, 'mainBgImg')}}">
      <image src="../../images/bouquet.png" style="height: {{836 + 0.5 * extraHeight}}rpx;"
        bindload="notifyAssetLoaded" />
    </view>
    <view class="protagonist">
      <view class="protagonist-top"></view>
      <view class="protagonist-container">
        <view class="protagonist-content">
          <view class="protagonist-name bridegroom">
            <view class="protagonist-name--cn">
              覃一斐
            </view>
            <view class="protagonist-name--en signature">
              Qinyifei
            </view>
          </view>
          <view class="protagonist-split">
            <square className="protagonist-square" />
          </view>
          <view class="protagonist-name bride">
            <view class="protagonist-name--cn">
              张颖
            </view>
            <view class="protagonist-name--en signature">
              Zhangying
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="bottom {{ bottomReady ? 'bottom--rotateY' : ''}}">
    <bottomsquare />
  </view>
</view>