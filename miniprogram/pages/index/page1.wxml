<view class="page page-1">
  <view class="top">
    <view class="top-content top-content-1 futura {{p1AnimationCls['top1']}}">
      WEDDING
    </view>
    <view class="top-content top-content-2 futura {{p1AnimationCls['top2']}}">
      INVITATION
    </view>
  </view>
  <view class="main" style="margin-top: {{0.72 * extraHeight}}rpx">
    <view class="main-bg--rect {{p1AnimationCls['bgRect']}}">
      <view class="main-bg--rect-inside" />
    </view>
    <view class="main-bg-img {{p1AnimationCls['bgImg']}}">
      <image src="../../images/bouquet.png" style="height: {{836 + 0.5 * extraHeight}}rpx;"
        bindload="notifyAssetLoaded" />
    </view>
    <view class="protagonist {{p1AnimationCls['protagonist']}}">
      <view class="protagonist-top"></view>
      <view class="protagonist-container">
        <view class="protagonist-content">
          <view class="protagonist-name bridegroom {{p1AnimationCls['protagonistName']}}">
            <view class="protagonist-name--cn">
              覃一斐
            </view>
            <view class="protagonist-name--en signature">
              Qinyifei
            </view>
          </view>
          <view class="protagonist-split {{p1AnimationCls['protagonistSplit']}}">
            <square className="protagonist-square" />
          </view>
          <view class="protagonist-name bride {{p1AnimationCls['protagonistName']}}">
            <view class="protagonist-name--cn">
              张颖
            </view>
            <view class="protagonist-name--en signature">
              Zhangying
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="bottom {{ bottomReady ? 'bottom--rotateY' : ''}} {{p1AnimationCls['bottom']}}">
    <bottomsquare />
  </view>
</view>
