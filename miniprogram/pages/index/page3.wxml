<view class="page page-3">
  <arrow className="prev-arrow {{p3PhotoIndex > 0 ? '' : 'hidden'}} {{p3AnimationCls['prevArrow']}}" bindtap="onTapPrev"
    direction="left"></arrow>
  <arrow className="next-arrow {{p3PhotoIndex < 2 ? '' : 'hidden'}} {{p3AnimationCls['nextArrow']}}" bindtap="onTapNext"
    direction="right"></arrow>
  <view class="container">
    <view class="photo-container {{p3PhotoIndex === 0 ? '' : 'hidden'}}">
      <view class="photo-content photo-content">
        <image class="photo--1 {{p3AnimationCls['photo1']}}" src="../../images/1.png" alt="" />
        <view class="photo-shadow photo-shadow--1 {{p3AnimationCls['shadow1']}}"></view>
      </view>
      <view class="photo-text--cn photo-text--1 {{p3AnimationCls['text1']}}">
        她在等待，
      </view>
      <view class="photo-text--en photo-text--1 {{p3AnimationCls['text1']}}">
        She always remembers that day,
      </view>
    </view>
    <view class="photo-container {{p3PhotoIndex === 1 ? '' : 'hidden'}}">
      <view class="photo-content">
        <view class="photo-shadow photo-shadow--2 {{p3AnimationCls['shadow2']}}"></view>
        <image class="photo--2 {{p3AnimationCls['photo2']}}" src="../../images/2.png" alt="" />
      </view>
      <view class="photo-text--cn photo-text--2 {{p3AnimationCls['text2']}}">
        他在寻找，
      </view>
      <view class="photo-text--en photo-text--2 {{p3AnimationCls['text2']}}">
        He always left her the best thing,
      </view>
    </view>
    <view class="photo-container {{p3PhotoIndex === 2 ? '' : 'hidden'}}">
      <view class="top-border--3 {{p3AnimationCls['rect3']}}">
        <image class="top-border--heart heart-beat {{p3AnimationCls['heart3']}}" src="../../images/heart.png" />
      </view>
      <view class="photo-content">
        <image class="photo--3 {{p3AnimationCls['photo3']}}" src="../../images/354.png" alt="" />
      </view>
      <view class="photo-text--cn photo-text--3 {{p3AnimationCls['text3']}}">
        直到他们在一起。
      </view>
      <view class="photo-text--en photo-text--3 {{p3AnimationCls['text3']}}">
        They‘d be together forever.
      </view>
    </view>
  </view>
  <view class="bottom {{ bottomReady ? 'bottom--rotateY' : ''}} {{p3AnimationCls['bottom']}}">
    <bottomsquare />
  </view>
</view>
