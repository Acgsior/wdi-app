  <view class="map-container">
    <view class="shade shade--top-left"></view>
    <view class="shade shade--top-right"></view>
    <map id="hotelMap" class="map" style="width: 100vw; height: 100vw;" latitude="{{map.latitude}}"
      longitude="{{map.longitude}}" markers="{{map.markers}}" show-location />
